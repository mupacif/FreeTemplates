		{% block head %}
		<style>
		#aside
		{
		border:1px solid black;
		width:20%;
		min-width:150px;

		} 
		#preview
		{
		width:70%;
		min-width:400px;

		}
		.preview
		{
			border:1px solid black;
			width:100%;
